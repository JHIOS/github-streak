{
  "manifest_version": 2,

  "name": "github-streak",
  "version": "1.0.0",
  "description": "Displays your GitHub streak again.",
  "homepage_url": "https://github.com/arkon/github-streak",

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "js": ["index.js"],
      "run_at": "document_end"
    }
  ]
}
